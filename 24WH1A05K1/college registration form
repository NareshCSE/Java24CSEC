package javA;

import java.awt.*;
import java.awt.event.*;

public class CollegeRegistration implements ActionListener {

    Frame f;
    TextField nameField, ageField, deptField;
    Choice genderChoice;
    Button submit;

    public CollegeRegistration() {

        f = new Frame("College Registration Form");
        f.setLayout(new FlowLayout());

        // Name
        f.add(new Label("Name:"));
        nameField = new TextField(15);
        f.add(nameField);

        // Age
        f.add(new Label("Age:"));
        ageField = new TextField(5);
        f.add(ageField);

        // Gender
        f.add(new Label("Gender:"));
        genderChoice = new Choice();
        genderChoice.add("Male");
        genderChoice.add("Female");
        genderChoice.add("Other");
        f.add(genderChoice);

        // Department
        f.add(new Label("Department:"));
        deptField = new TextField(10);
        f.add(deptField);

        // Button
        submit = new Button("Submit");
        submit.addActionListener(this);
        f.add(submit);

        // Frame settings
        f.setSize(300, 300);
        f.setVisible(true);

        // Close window
        f.addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent e) {
                f.dispose();
            }
        });
    }

    public void actionPerformed(ActionEvent e) {
        String name = nameField.getText();
        String age = ageField.getText();
        String gender = genderChoice.getSelectedItem();
        String dept = deptField.getText();

        // Display result in console (simple output)
        System.out.println("---- Registration Details ----");
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Gender: " + gender);
        System.out.println("Department: " + dept);
    }

    public static void main(String[] args) {
        new CollegeRegistration();
    }
}
